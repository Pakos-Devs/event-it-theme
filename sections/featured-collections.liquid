{{ 'figura-professionale.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <h1 class="title">Figure Professionali</h1>

  <ul class="filtered-collection-list grid grid--3-col-desktop">
    {% for collection in collections %}
      {% if collection.metafields.custom.figuraprofessionale == true %}
        <li class="collection-list__item grid__item">
          <a href="{{ collection.url }}" class="collection-tile">
            <!-- Display Collection Image -->
            <div class="collection-tile__image">
              <img src="{{ collection.image | img_url: 'medium' }}" alt="{{ collection.title }}" class="collection-tile__image-img">
            </div>
            <!-- Display Collection Title -->
            <div class="collection-tile__title">
              <h2>{{ collection.title }}</h2>
            </div>
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>

</div>
